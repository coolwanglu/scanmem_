#!/bin/bash

DATADIR=@PKGDATADIR@

if [[ "$(id -u)" != "0" ]]; then
    if [ -e "/usr/bin/gksu" ]; then
        exec gksu --sudo-mode --preserve-env --description "GameConqueror" "python3 -OO $DATADIR/GameConqueror.py"
    elif [ -e "/usr/bin/kdesu" ]; then
        exec kdesu -c "python3 -OO $DATADIR/GameConqueror.py"
    else
        exec beesu - "python3 -OO $DATADIR/GameConqueror.py"
    fi
else
    exec python3 -OO "$DATADIR/GameConqueror.py"
fi
